<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_2"
    tools:context=".BookPlan">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_keyboard_backspace"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Plan"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textStyle="bold"/>

   <LinearLayout
       android:id="@+id/layout1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="28dp"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_marginRight="50dp"
       android:layout_below="@+id/t">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="25sp"
        android:textColor="@color/white"/>
       <EditText
           android:id="@+id/name"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@drawable/custom_text"
           android:inputType="textPersonName"
           android:layout_marginTop="10dp"
           android:textColor="@color/white"
           android:textSize="20dp"
           android:layout_marginLeft="40dp"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/layout1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone nr"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/phone_nr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_text"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/layout2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textSize="25sp"
            android:inputType="text"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/custom_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="49dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/layout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="25sp"
            android:inputType="date"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="16dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_text"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout4"
        android:text="Make payment through using below Scanner and fill UTR number and sumbit."
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="28dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/scanner"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/scanner"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"/>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/scanner">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTR nr"
            android:textSize="25sp"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/utr_nr"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_text"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/book"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout5"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:text="Book"
        android:shadowRadius="20"
        android:shadowColor="@color/black"
        android:textColor="@color/black"
        android:textSize="20sp" />


</RelativeLayout>